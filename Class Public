//Accessing Public

#include<iostream>
using namespace std;
class employ{
	public:
		string name,role,id;
	employ(string n,string r,string i)
	{
		name=n;
		role=r;
		id=i;
	}
	void display()
	{
		cout<<name<<endl;
		cout<<role<<endl;
		cout<<id<<endl;
	}
};
int main()
{
	employ e1("manoj","develpoer","123");
	e1.display();
}

//Accessing the private 

#include<iostream>
using namespace std;
class rec{
	int len,bre;
	public:
		//len=l;
		//bre=b;
	 rec(int l,int b)
	 {
	    len=l;
	    bre=b;
	 }
	 void disp_area()
	 {
	 	cout<<len*bre<<endl;
	 }
}; 
int main()
{
	rec r1(6,5);
	r1.disp_area();
}
